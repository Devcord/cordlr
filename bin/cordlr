#!/usr/bin/env node
const cordlr = require('../')
const log = require('log-cb')
const args = process.argv.splice(2)
const cwd = process.cwd()

const help = require('./methods/help')
const version = require('./methods/version')
const start = require('./methods/start')
const setup = require('./methods/setup')
const install = require('./methods/install')

/**
 * Create bot using command line.
 */

switch (args[0]) {
  case '-h':
    help()
    break
  case '-v':
    help()
    break
  case 'setup':
    setup(cwd)
    break
  case 'install':
    install(args[1])
    break
  default:
    start()
    break
}

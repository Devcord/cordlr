#!/usr/bin/env node
const minimist = require('minimist')

/**
 * Create bot using command line.
 */

// CLI data
const flags = minimist(process.argv.slice(2))
const args = flags._
const action = args.shift()

// Start CLI
main()

function main () {
  // --help, -h, help
  if (flags.help || flags.h || action === 'help') return require('./methods/help')()

  // --version, -v, version
  if (flags.version || flags.v || action === 'version') return require('./methods/version')()

  // setup
  if (action === 'setup') return require('./methods/setup')()

  // install
  if (action === 'install') return require('./methods/install')(args)

  // otherwise, start it!
  require('./methods/start')()
}
